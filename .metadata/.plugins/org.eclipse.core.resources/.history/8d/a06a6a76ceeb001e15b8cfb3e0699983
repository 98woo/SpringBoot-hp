$().ready(function () {
	$("#btn-login").on("click", function () {
		$.post("/member/login", {
			email: $("#email").val(),
			password: $("#password").val(),
		},
		function (response) {
			console.log(response);
			// 서버의 응답 가져오기 
			var errors = response.data.errors;
			var errorMessage = response.data.errorMessage;
			var next = response.data.next;
			
			/*
				response = {
					response: {
						error: {
							"email": []
						},
						errorMessage: ""
						next: "/board/list"
					}
				}
			 */
		});
	});
});